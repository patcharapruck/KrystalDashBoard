<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorMain</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="Dottheme" parent="@style/Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="creditHdw">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/prompt_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10dp</item>
    </style>


    <style name="font_pay" parent="font_pay_data">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="font_pay_data">
        <item name="android:textColor">@color/color_pay</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="font_notpay" parent="font_notpay_data">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="font_notpay_data" parent="font_pay_data">
        <item name="android:textColor">@color/color_not_pay</item>
    </style>

    <style name="textPay">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:gravity">right</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/colorfont</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="font_head_pay" parent="font_card_main">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorfont</item>
    </style>

    <style name="font_card_main">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>



</resources>
