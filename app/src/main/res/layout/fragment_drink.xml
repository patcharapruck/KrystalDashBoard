<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <View
        android:layout_width="match_parent"
        android:layout_height="157dp"
        android:background="@color/bg1"></View>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="184dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="0.1dp"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.3"
                        android:orientation="horizontal"
                        android:weightSum="2"

                        >

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="23dp"
                                android:fontFamily="@font/prompt_bold"
                                android:gravity="center"
                                android:text="รายการสินค้า"
                                android:textColor="#19237E"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/textview_amount_product"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="11dp"
                                android:fontFamily="@font/prompt_bold"
                                android:gravity="center"
                                android:text="39"
                                android:textColor="#17C671"
                                android:textSize="39sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="23dp"
                                android:fontFamily="@font/prompt_bold"
                                android:gravity="center"
                                android:text="จำนวนเครื่องดื่ม"
                                android:textColor="#19237E"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/textview_amount_drinks"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="11dp"
                                android:fontFamily="@font/prompt_bold"
                                android:gravity="center"
                                android:text="156"
                                android:textColor="#17C671"
                                android:textSize="39sp" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.7"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/prompt_bold"
                                android:gravity="center"
                                android:text="เบิกใช้สิทธิ์"
                                android:textColor="#4D4D4D"
                                android:textSize="11sp" />

                            <TextView
                                android:id="@+id/textview_purchase_amount_product"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/prompt_bold"
                                android:gravity="center"
                                android:text="120"
                                android:textColor="#19237E"
                                android:textSize="20dp" />

                            <View
                                android:layout_width="84dp"
                                android:layout_height="4dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="8dp"
                                android:background="#8772DE" />

                        </LinearLayout>

                        <View
                            android:layout_width="0.1dp"
                            android:layout_height="38dp"
                            android:layout_gravity="center"
                            android:background="#DEDEDE" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/prompt_bold"
                                android:gravity="center"
                                android:text="ซื้อ"
                                android:textColor="#4D4D4D"
                                android:textSize="11sp" />

                            <TextView
                                android:id="@+id/textview_buy_amount_product"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/prompt_bold"
                                android:gravity="center"
                                android:text="30"
                                android:textColor="#19237E"
                                android:textSize="20dp" />

                            <View
                                android:layout_width="84dp"
                                android:layout_height="4dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="8dp"
                                android:background="#DE72AC" />


                        </LinearLayout>

                        <View
                            android:layout_width="0.1dp"
                            android:layout_height="38dp"
                            android:layout_gravity="center"
                            android:background="#DEDEDE" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/prompt_bold"
                                android:gravity="center"
                                android:text="Entertain"
                                android:textColor="#4D4D4D"
                                android:textSize="11sp" />

                            <TextView
                                android:id="@+id/textview_entertain_amount_product"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/prompt_bold"
                                android:gravity="center"
                                android:text="6"
                                android:textColor="#19237E"
                                android:textSize="20dp" />

                            <View
                                android:layout_width="84dp"
                                android:layout_height="4dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="8dp"
                                android:background="#72DE97" />

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="11dp"
                android:fontFamily="@font/prompt_medium"
                android:text="สินค้าขายดี"
                android:textSize="10sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:orientation="horizontal">

                <!--card bast seller-->
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="18.57dp"
                android:fontFamily="@font/prompt_medium"
                android:text="รายการสินค้า"
                android:textSize="10sp" />


            <!--Expandable Card drink-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2000dp"
                android:background="@color/bg1"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/list_item_product"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </ListView>


            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>