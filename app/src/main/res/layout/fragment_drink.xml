<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <View
        android:layout_width="match_parent"
        android:layout_height="157dp"
        android:background="@color/bg1"></View>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="184dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="0.1dp"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.3"
                        android:orientation="horizontal"
                        android:weightSum="2"

                        >

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="23dp"
                                android:fontFamily="@font/prompt_bold"
                                android:gravity="center"
                                android:text="รายการสินค้า"
                                android:textColor="#19237E"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/textview_amount_product"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="11dp"
                                android:fontFamily="@font/prompt_bold"
                                android:gravity="center"
                                android:text="39"
                                android:textColor="#17C671"
                                android:textSize="39sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="23dp"
                                android:fontFamily="@font/prompt_bold"
                                android:gravity="center"
                                android:text="จำนวนเครื่องดื่ม"
                                android:textColor="#19237E"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/textview_amount_drinks"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="11dp"
                                android:fontFamily="@font/prompt_bold"
                                android:gravity="center"
                                android:text="156"
                                android:textColor="#17C671"
                                android:textSize="39sp" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.7"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/prompt_bold"
                                android:gravity="center"
                                android:text="เบิกใช้สิทธิ์"
                                android:textColor="#4D4D4D"
                                android:textSize="11sp" />

                            <TextView
                                android:id="@+id/textview_purchase_amount_product"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/prompt_bold"
                                android:gravity="center"
                                android:text="120"
                                android:textColor="#19237E"
                                android:textSize="20dp" />

                            <View
                                android:layout_width="84dp"
                                android:layout_height="4dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="8dp"
                                android:background="#8772DE" />

                        </LinearLayout>

                        <View
                            android:layout_width="0.1dp"
                            android:layout_height="38dp"
                            android:layout_gravity="center"
                            android:background="#DEDEDE" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/prompt_bold"
                                android:gravity="center"
                                android:text="ซื้อ"
                                android:textColor="#4D4D4D"
                                android:textSize="11sp" />

                            <TextView
                                android:id="@+id/textview_buy_amount_product"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/prompt_bold"
                                android:gravity="center"
                                android:text="30"
                                android:textColor="#19237E"
                                android:textSize="20dp" />

                            <View
                                android:layout_width="84dp"
                                android:layout_height="4dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="8dp"
                                android:background="#DE72AC" />


                        </LinearLayout>

                        <View
                            android:layout_width="0.1dp"
                            android:layout_height="38dp"
                            android:layout_gravity="center"
                            android:background="#DEDEDE" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/prompt_bold"
                                android:gravity="center"
                                android:text="Entertain"
                                android:textColor="#4D4D4D"
                                android:textSize="11sp" />

                            <TextView
                                android:id="@+id/textview_entertain_amount_product"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/prompt_bold"
                                android:gravity="center"
                                android:text="6"
                                android:textColor="#19237E"
                                android:textSize="20dp" />

                            <View
                                android:layout_width="84dp"
                                android:layout_height="4dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="8dp"
                                android:background="#72DE97" />

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="11dp"
                android:fontFamily="@font/prompt_medium"
                android:text="สินค้าขายดี"
                android:textSize="10sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:orientation="horizontal">

                <!--card bast seller-->

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="18.57dp"
                android:fontFamily="@font/prompt_medium"
                android:text="รายการสินค้า"
                android:textSize="10sp" />


            <!--Expandable Card drink-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@color/bg1"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.CardView
                        android:id="@+id/carddrink"
                        android:layout_width="match_parent"
                        android:layout_height="57dp"
                        android:layout_gravity="center|center_vertical"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="9dp">

                        <android.support.v7.widget.GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            app:columnCount="1"
                            app:rowCount="3">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">


                            </LinearLayout>
                        </android.support.v7.widget.GridLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="42dp"
                                android:layout_height="42dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="12dp"
                                android:background="@drawable/backlabel" />

                            <TextView
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:fontFamily="@font/prompt_medium"
                                android:gravity="center_vertical"
                                android:text="Drizly"
                                android:textColor="#4D4D4D"
                                android:textSize="12dp" />

                            <LinearLayout
                                android:layout_width="65dp"
                                android:layout_height="26dp"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/statusdrink"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/prompt_medium"
                                    android:gravity="right|center_vertical"
                                    android:text="300"
                                    android:layout_marginRight="2dp"
                                    android:textColor="@color/white"
                                    android:textSize="12dp" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:layout_marginBottom="1dp"
                                    android:fontFamily="@font/prompt_medium"
                                    android:gravity="center_vertical"
                                    android:text="ขวด"
                                    android:textColor="@color/white"
                                    android:textSize="12dp" />

                            </LinearLayout>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                        android:id="@+id/mycontent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="62dp"
                        app:ael_duration="300"
                        app:ael_expanded="true"
                        app:ael_interpolator="fastOutSlowIn"
                        app:ael_orientation="vertical"
                        >

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:elevation="2dp"
                            app:cardCornerRadius="3dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:orientation="vertical"
                                android:weightSum="3">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_marginBottom="10dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/money" />

                                    <TextView
                                        android:layout_width="150dp"
                                        android:layout_height="match_parent"
                                        android:fontFamily="@font/prompt_medium"
                                        android:gravity="center_vertical"
                                        android:text="  เบิกใช้สิทธิ์" />

                                    <TextView
                                        android:layout_width="100dp"
                                        android:layout_height="match_parent"
                                        android:fontFamily="@font/prompt_medium"
                                        android:gravity="center|right"

                                        android:text="100" />

                                    <TextView
                                        android:layout_width="50dp"
                                        android:layout_height="match_parent"
                                        android:fontFamily="@font/prompt_medium"
                                        android:gravity="center"
                                        android:text="ขวด" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_marginBottom="10dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/coin_2" />

                                    <TextView
                                        android:layout_width="150dp"
                                        android:layout_height="match_parent"
                                        android:fontFamily="@font/prompt_medium"
                                        android:gravity="center_vertical"
                                        android:text="  ซื้อ" />

                                    <TextView
                                        android:layout_width="100dp"
                                        android:layout_height="match_parent"
                                        android:fontFamily="@font/prompt_medium"
                                        android:gravity="center|right"
                                        android:text="100" />

                                    <TextView
                                        android:layout_width="50dp"
                                        android:layout_height="match_parent"
                                        android:fontFamily="@font/prompt_medium"
                                        android:gravity="center"

                                        android:text="ขวด" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_marginBottom="10dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/champagne_glass" />

                                    <TextView
                                        android:layout_width="150dp"
                                        android:layout_height="match_parent"
                                        android:fontFamily="@font/prompt_medium"
                                        android:gravity="center_vertical"
                                        android:text="  Entertain" />

                                    <TextView
                                        android:layout_width="100dp"
                                        android:layout_height="match_parent"
                                        android:fontFamily="@font/prompt_medium"
                                        android:gravity="center|right"
                                        android:text="100" />

                                    <TextView
                                        android:layout_width="50dp"
                                        android:layout_height="match_parent"
                                        android:fontFamily="@font/prompt_medium"
                                        android:gravity="center"
                                        android:text="ขวด" />
                                </LinearLayout>


                            </LinearLayout>

                        </android.support.v7.widget.CardView>

                    </com.github.aakira.expandablelayout.ExpandableRelativeLayout>


                </RelativeLayout>


            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>