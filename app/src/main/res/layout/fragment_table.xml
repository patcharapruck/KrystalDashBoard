<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@color/colorMain"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingTop="10dp"
        android:paddingRight="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3.97dp"
            android:fontFamily="@font/prompt_bold"
            android:text="การชำระเงิน"
            android:textColor="@color/white"
            android:textSize="21dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/prompt_regular"
                android:text="ค้นหาจาก: "
                android:textColor="@color/white"
                android:textSize="15dp" />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/spins"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:popupBackground="@color/colorMain">

            </android.support.v7.widget.AppCompatSpinner>


        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="35dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/icon_search"
                    android:background="@color/black"/>

                <EditText
                    android:id="@+id/edittext_search_table"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:background="@drawable/bordertotal"
                    android:fontFamily="@font/prompt_regular"
                    android:gravity="left|center_vertical"
                    android:hint="   ค้นหาใบงาน"
                    android:singleLine="true" />

            </LinearLayout>


        </android.support.v7.widget.CardView>


    </LinearLayout>

    <FrameLayout
        android:id="@+id/frame_table_pay"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </FrameLayout>


</LinearLayout>