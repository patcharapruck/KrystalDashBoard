<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg1"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/carddrink"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_gravity="center|center_vertical"
        android:layout_margin="10dp"
        android:elevation="3dp"
        app:cardCornerRadius="9dp">

        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:rowCount="3"
            app:columnCount="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >


            </LinearLayout>
        </android.support.v7.widget.GridLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:background="@drawable/lace"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"/>

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Drizly"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/prompt_medium"
                android:textSize="12dp"
                android:textColor="#4D4D4D"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"/>



            <LinearLayout
                android:layout_width="65dp"
                android:layout_height="26dp"
                android:background="@drawable/statusdrink"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:weightSum="2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:textSize="12dp"
                    android:fontFamily="@font/prompt_medium"
                    android:textColor="@color/white"
                    android:text="149"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="12dp"
                    android:fontFamily="@font/prompt_medium"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"
                    android:text=" ขวด"
                    />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
    <com.github.aakira.expandablelayout.ExpandableRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        app:ael_duration="500"
        app:ael_expanded="false"
        app:ael_interpolator="fastOutSlowIn"
        app:ael_orientation="vertical"

        >
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:elevation="2dp"
            app:cardCornerRadius="3dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/money" />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/prompt_medium"
                        android:gravity="center_vertical"
                        android:text="  เบิกใช้สิทธิ์" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/prompt_medium"
                        android:gravity="center|right"

                        android:text="100" />

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/prompt_medium"
                        android:gravity="center"

                        android:text="ขวด" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/coin_2" />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/prompt_medium"
                        android:gravity="center_vertical"
                        android:text="  ซื้อ" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/prompt_medium"
                        android:gravity="center|right"

                        android:text="100" />

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/prompt_medium"
                        android:gravity="center"

                        android:text="ขวด" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/champagne_glass" />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/prompt_medium"
                        android:gravity="center_vertical"
                        android:text="  Entertain" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/prompt_medium"
                        android:gravity="center|right"

                        android:text="100" />

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/prompt_medium"
                        android:gravity="center"

                        android:text="ขวด" />
                </LinearLayout>


            </LinearLayout>

        </android.support.v7.widget.CardView>

    </com.github.aakira.expandablelayout.ExpandableRelativeLayout>

</RelativeLayout>