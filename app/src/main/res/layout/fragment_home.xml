<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/h_tool_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--graph money-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:padding="10dp">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    app:cardBackgroundColor="@color/white"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="10dp">
                        <!-- botton -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_gravity="right"
                            android:orientation="horizontal">

                            <Button
                                android:layout_width="70dp"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/prompt_regular"
                                android:gravity="center"
                                android:textSize="10sp"
                                android:text="7 day" />

                            <Button
                                android:layout_width="70dp"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/prompt_regular"
                                android:gravity="center"
                                android:textSize="10sp"
                                android:text="2 week" />

                            <Button
                                android:layout_width="70dp"
                                android:layout_height="match_parent"
                                android:textSize="10sp"
                                android:gravity="center"
                                android:fontFamily="@font/prompt_regular"
                                android:text="3 week" />

                        </LinearLayout>
                        <!--graph-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:orientation="vertical">

                            <com.github.mikephil.charting.charts.LineChart
                                android:id="@+id/linechart"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                android:background="@color/colorMain">

                            </com.github.mikephil.charting.charts.LineChart>
                        </LinearLayout>
                        <!--money-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:layout_marginBottom="1dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"
                                    android:fontFamily="@font/prompt_regular"
                                    android:gravity="center"
                                    android:textSize="12sp"
                                    android:text="รายรับทั้งหมด"
                                    android:textColor="#000000" />

                                <android.support.v7.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="10dp"
                                    android:elevation="15dp"
                                    app:cardBackgroundColor="@color/colorPrimary"
                                    app:cardCornerRadius="5dp">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:fontFamily="@font/prompt_regular"
                                        android:gravity="center"
                                        android:text="1234567890"
                                        android:textColor="#000000"
                                        android:textSize="20sp" />
                                </android.support.v7.widget.CardView>

                            </LinearLayout>

                            <android.support.v7.widget.GridLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:columnCount="2"
                                app:columnOrderPreserved="false"
                                app:rowCount="1">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="58dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentBottom="true"
                                        android:layout_marginBottom="2dp"
                                        android:orientation="horizontal"
                                        android:weightSum="2">

                                        <android.support.v7.widget.CardView
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"                                            android:layout_marginRight="10dp"
                                            android:layout_weight="1"
                                            android:elevation="15dp"
                                            app:cardBackgroundColor="@color/colorAccent"
                                            app:cardCornerRadius="5dp">

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:fontFamily="@font/prompt_regular"
                                                android:gravity="center"
                                                android:text="รายรับจริง"
                                                android:textColor="#000000" />

                                        </android.support.v7.widget.CardView>

                                        <android.support.v7.widget.CardView
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:elevation="15dp"
                                            app:cardBackgroundColor="@color/colorAccent"
                                            app:cardCornerRadius="5dp">

                                            <android.support.v7.widget.GridLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="50dp"
                                                app:columnCount="2"
                                                app:rowCount="1">

                                                <LinearLayout
                                                    android:layout_margin="0dp"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:orientation="horizontal"
                                                    android:padding="5dp"
                                                    android:weightSum="2">

                                                    <TextView
                                                        android:layout_width="0dp"
                                                        android:layout_height="match_parent"
                                                        android:layout_weight="1"
                                                        android:fontFamily="@font/prompt_regular"
                                                        android:gravity="center"
                                                        android:text="เครื่องดื่ม" />

                                                    <TextView
                                                        android:layout_width="0dp"
                                                        android:layout_height="match_parent"
                                                        android:fontFamily="@font/prompt_regular"
                                                        android:layout_weight="1"
                                                        android:gravity="center"
                                                        android:text="เครื่องดื่ม" />

                                                </LinearLayout>

                                            </android.support.v7.widget.GridLayout>

                                        </android.support.v7.widget.CardView>
                                    </LinearLayout>

                                </RelativeLayout>


                            </android.support.v7.widget.GridLayout>
                        </LinearLayout>
                    </LinearLayout>


                </android.support.v7.widget.CardView>

            </RelativeLayout>

            graph PR

            <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:padding="10dp"

            >

            <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
                android:layout_centerInParent="true"
                app:cardBackgroundColor="@color/white"
                android:layout_margin="5dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="กราฟ PR " />

            </android.support.v7.widget.CardView>

            </RelativeLayout>
            <!--graph Bank-->

            <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:padding="10dp"

            >

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    app:cardBackgroundColor="@color/white"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="กราฟ bank "
                    android:gravity="center"/>
            </android.support.v7.widget.CardView>

            </RelativeLayout>
            <!--graph drink-->

            <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:padding="10dp"

            >

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    app:cardBackgroundColor="@color/white"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="กราฟ เครื่องดื่ม "
                    android:gravity="center"/>

            </android.support.v7.widget.CardView>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>