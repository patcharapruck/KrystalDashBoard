<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragment.DashBooardPRFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5dp"
        app:cardElevation="1dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
          <!--chart pr-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <com.razerdp.widget.animatedpieview.AnimatedPieView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/drew2" />

                <TextView
                    android:id="@+id/number_of_calories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="24sp"
                    android:textColor="#232425"
                    android:fontFamily="@font/prompt_bold"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>
    
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:weightSum="2.01">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="2.01">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/prompt_bold"
                    android:text="On Floor ทั้งหมด"
                    android:layout_gravity="right"
                    android:layout_marginRight="25dp"

                    android:textColor="#232425"
                    android:textSize="13sp" />

                <View
                    android:layout_width="104dp"
                    android:layout_height="1.5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="right"
                    android:layout_marginRight="25dp"
                    android:background="#007AFF">

                </View>

                <TextView
                    android:id="@+id/pr_oofloor"
                    android:layout_width="104dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:layout_marginRight="25dp"
                    android:text="0"
                    android:textColor="#909090"
                    android:textSize="28sp" />



            </LinearLayout>
            <View
                android:layout_weight="0.004"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_alignParentBottom="true"
                android:background="#5D5D5D">

            </View>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/prompt_bold"
                    android:text="ว่าง"
                    android:layout_marginLeft="25dp"
                    android:textColor="#232425"
                    android:textSize="13sp" />

                <View
                    android:layout_width="22dp"
                    android:layout_height="1.5dp"
                    android:layout_marginLeft="25dp"
                    android:layout_alignParentBottom="true"
                    android:background="#FFC108">

                </View>

                <TextView
                    android:id="@+id/pr_empty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:gravity="left"
                    android:text="0"
                    android:textColor="#909090"
                    android:textSize="28sp" />

            </LinearLayout>

        </LinearLayout>

            <View
                android:layout_weight="0.01"
                android:layout_width="match_parent"
                android:layout_height="0.004dp"
                android:layout_gravity="center"
                android:background="#5D5D5D">

            </View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:weightSum="2.01">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/prompt_bold"
                        android:layout_marginRight="25dp"
                        android:text="รันดื่มอยู่"
                        android:layout_gravity="right"

                        android:textColor="#232425"
                        android:textSize="13sp" />

                    <View
                        android:layout_width="50dp"
                        android:layout_height="1.5dp"
                        android:layout_gravity="right"
                        android:layout_marginRight="25dp"
                        android:layout_alignParentBottom="true"
                        android:background="#06B085">

                    </View>

                    <TextView
                        android:id="@+id/pr_run"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="25dp"
                        android:gravity="right"
                        android:text="0"
                        android:textColor="#909090"
                        android:textSize="28sp" />



                </LinearLayout>
                <View
                    android:layout_weight="0.004"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_alignParentBottom="true"
                    android:background="#5D5D5D">

                </View>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/prompt_bold"
                        android:text="ไม่มีดื่ม"
                        android:layout_marginLeft="25dp"
                        android:textColor="#232425"
                        android:textSize="13sp" />

                    <View
                        android:layout_width="39dp"
                        android:layout_height="1.5dp"
                        android:layout_marginLeft="25dp"

                        android:layout_alignParentBottom="true"
                        android:background="#EF483E">

                    </View>

                    <TextView
                        android:id="@+id/pr_not_drink"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:gravity="left"
                        android:text="0"
                        android:textColor="#909090"
                        android:textSize="28sp" />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>