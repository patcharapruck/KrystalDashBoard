<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/carddrink"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_gravity="center|center_vertical"
            android:layout_margin="10dp"
            app:cardCornerRadius="9dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageview_product"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/backlabel" />

                <TextView
                    android:id="@+id/textview_product_name"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/prompt_medium"
                    android:gravity="center_vertical"
                    android:text="Drizly"
                    android:textColor="#4D4D4D"
                    android:textSize="12dp" />

                <LinearLayout
                    android:layout_width="65dp"
                    android:layout_height="26dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/statusdrink"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/textview_product_total"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/prompt_medium"
                        android:gravity="right|center_vertical"
                        android:text="300"
                        android:layout_marginRight="2dp"
                        android:textColor="@color/white"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginBottom="1dp"
                        android:fontFamily="@font/prompt_medium"
                        android:gravity="center_vertical"
                        android:text="ขวด"
                        android:textColor="@color/white"
                        android:textSize="12dp" />

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <com.github.aakira.expandablelayout.ExpandableRelativeLayout
            android:id="@+id/mycontent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="62dp"
            app:ael_duration="500"
            app:ael_expanded="false"
            app:ael_interpolator="fastOutSlowIn"
            app:ael_orientation="vertical"

            >

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:elevation="2dp"
                app:cardCornerRadius="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/money" />

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/prompt_medium"
                            android:gravity="center_vertical"
                            android:text="  เบิกใช้สิทธิ์" />

                        <TextView
                            android:id="@+id/textview_product_purchase"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/prompt_medium"
                            android:gravity="center|right"
                            android:text="100" />

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/prompt_medium"
                            android:gravity="center"
                            android:text="ขวด" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/coin_2" />

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/prompt_medium"
                            android:gravity="center_vertical"
                            android:text="  ซื้อ" />

                        <TextView
                            android:id="@+id/textview_product_buy"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/prompt_medium"
                            android:gravity="center|right"
                            android:text="100" />

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/prompt_medium"
                            android:gravity="center"

                            android:text="ขวด" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/champagne_glass" />

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/prompt_medium"
                            android:gravity="center_vertical"
                            android:text="  Entertain" />

                        <TextView
                            android:id="@+id/textview_product_entertain"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/prompt_medium"
                            android:gravity="center|right"
                            android:text="100" />

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/prompt_medium"
                            android:gravity="center"
                            android:text="ขวด" />
                    </LinearLayout>


                </LinearLayout>

            </android.support.v7.widget.CardView>

        </com.github.aakira.expandablelayout.ExpandableRelativeLayout>


    </RelativeLayout>


</LinearLayout>